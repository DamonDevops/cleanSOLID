@page "/leaverequests/detail/{id:int}"
<h3>Detail</h3>

<div class="alert alert-@ClassName" role="alert">
    <h4 class="alert-heading">@HeadingName</h4>
    <p>
        <strong>Employee name:</strong> @LeaveRequestVM.Employee.FirstName @LeaveRequestVM.Employee.LastName <br />
    </p>
    <hr />
    <p>
        Date Requested - @LeaveRequestVM.RequestedDate
    </p>
</div>


<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @LeaveRequestVM.StartingDate
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @LeaveRequestVM.EndingDate
        </dd>
        <dt class="col-sm-2">
            Leave Type
        </dt>
        <dd class="col-sm-10">
            @LeaveRequestVM.LeaveType.Name
        </dd>
        <dt class="col-sm-2">
            Request Comments
        </dt>
        <dd class="col-sm-10">
            @LeaveRequestVM.RequestComments
        </dd>
    </dl>
</div>
<div>

    @if (LeaveRequestVM.Approved == null)
    {
        <button class="btn btn-success" @onclick="(() => ChangeApproval(true))">
            Approve
        </button>
        <button class="btn btn-danger" @onclick="(() => ChangeApproval(false))">
            Reject
        </button>
    }
    <BackToList Target="leaverequests/" />
   
</div>